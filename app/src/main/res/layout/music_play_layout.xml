<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/miniPlayLayout">

    <ImageView
        android:id="@+id/songsCover"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/icon_default_songs"/>

   <LinearLayout
       android:id="@+id/songInfoLayout"
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:gravity="left">
      <TextView
          android:id="@+id/songsName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/default_songs_name"
          android:textColor="@color/black"
          android:textSize="14sp"
          android:maxLines="1"
          android:ellipsize="end"/>

      <TextView
          android:id="@+id/singerName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/default_singer_name"
          android:textColor="@color/color_singer_name"
          android:textSize="12sp"
          android:maxLines="1"
          android:ellipsize="end"
          android:layout_marginLeft="5dp"/>
   </LinearLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:gravity="right">
      <ImageView
          android:id="@+id/previousSongs"
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:src="@drawable/icon_previous_song"
          android:layout_marginLeft="10dp"/>

      <ImageView
          android:id="@+id/playSongs"
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:src="@drawable/icon_pause_play_black" />

      <ImageView
          android:id="@+id/nextSongs"
          android:layout_width="32dp"
          android:layout_height="32dp"
          android:src="@drawable/icon_next_song"
          android:layout_marginRight="10dp"/>
   </LinearLayout>

</LinearLayout>