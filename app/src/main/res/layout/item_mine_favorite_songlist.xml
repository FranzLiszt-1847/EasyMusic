<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_radius_white"
    android:padding="10dp">

    <TextView
        android:id="@+id/favoriteListNum"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="收藏歌单(0个)"
        android:textColor="@color/color_system_default"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/moreListInfo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/icon_more_songlist"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favoriteRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/favoriteListNum"/>
</androidx.constraintlayout.widget.ConstraintLayout>